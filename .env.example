# Database Configuration
# MariaDB/MySQL Connection Details
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=wikimillionaire

# Alternative: Connection String (if provided, individual settings above are ignored)
# DATABASE_URL=mysql://user:password@host:port/database

# Wikimedia OAuth Configuration
# OAuth 2.0 (existing)
WIKIMEDIA_CLIENT_ID=your_client_id
WIKIMEDIA_CLIENT_SECRET=your_client_secret
WIKIMEDIA_REDIRECT_URI=http://localhost:3000/api/auth/callback/wikimedia

# OAuth 1.0 (new)
WIKIMEDIA_CONSUMER_KEY=your_consumer_key
WIKIMEDIA_CONSUMER_SECRET=your_consumer_secret

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Provider Selection
# Options: mariadb, mysql, supabase, neondb
DB_TYPE=mariadb

# JWT Token Configuration
JWT_SECRET=your_jwt_secret_key_here
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Cookie Configuration
COOKIE_DOMAIN=
