# Database Configuration
# MariaDB/MySQL Connection Details
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=wikimillionaire

# Alternative: Connection String (if provided, individual settings above are ignored)
# DATABASE_URL=mysql://user:password@host:port/database

# Wikimedia OAuth Configuration
# Note: When using PKCE (Proof Key for Code Exchange), client_secret is NOT needed
# PKCE is for public clients - the code_verifier serves as the authentication mechanism
WIKIMEDIA_CLIENT_ID=your_client_id
# WIKIMEDIA_CLIENT_SECRET is no longer used with PKCE flow
WIKIMEDIA_REDIRECT_URI=http://localhost:3000/api/auth/callback/wikimedia

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
